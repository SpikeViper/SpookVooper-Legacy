@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<div class="container vw-100">
    <div class="col-12">
        <h4>@ViewData["Title"]</h4>
        @await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    @Html.HiddenFor(x => x.Id)
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        @if (Model.IsEmailConfirmed)
                        {
                            <div class="input-group">
                                <input asp-for="Email" class="form-control" />
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                        }
                        else
                        {
                            <input asp-for="Email" class="form-control" />
                            <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                        }
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="discordid"></label>
                        <input asp-for="discordid" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="twitchid"></label>
                        <input asp-for="twitchid" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="NationState"></label>
                        <input asp-for="NationState" class="form-control" disabled />
                    </div>

                    <br />

                    <div class="form-group">
                        <div class="container" style="align-content:flex-start">
                            <div class="d-flex">
                                <div class="flex-column" style="margin-right:5px; margin-left: -15px">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                                <div class="flex-column" style="margin-right:5px">
                                    <a asp-action="Info" asp-controller="User" asp-route-svid="@Model.Id" style="white-space:nowrap" class="btn btn-primary">User Page</a>
                                </div>
                                <div class="flex-column" style="margin-right:5px">
                                    <a asp-action="ConnectDiscord" asp-controller="Account" class="btn btn-primary" style="white-space:nowrap">Connect Discord</a>
                                </div>
                                <div class="flex-column" style="margin-right:5px">
                                    <a asp-action="ConnectTwitch" asp-controller="Account" class="btn btn-primary" style="white-space:nowrap">Connect Twitch</a>
                                </div>
                                <div class="flex-column" style="margin-right:5px">
                                    <a asp-action="Connect" asp-controller="Nation" class="btn btn-primary" style="white-space:nowrap">Connect Nation</a>
                                </div>
                                <div class="flex-column" style="margin-right:5px">
                                    <a asp-action="ViewAPIKey" asp-controller="Account" class="btn btn-outline-warning" style="white-space:nowrap">API Key [Advanced]</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @section Scripts {
            @await Html.PartialAsync("_ValidationScriptsPartial")
        }
    </div>
</div>