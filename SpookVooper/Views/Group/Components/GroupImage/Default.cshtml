@inject UserManager<User> userManager

@{ var owner = await userManager.FindByIdAsync(Model.Owner_Id); }

@if (Model.Group_Category == "Parties")
{
    <img class="govpfp m-2" style="max-width:90%; max-height:90%; box-shadow: 0px 0px 0px 7px #1bd9f2;" src="@Model.Image_Url" />
}
else
{
    <img class="govpfp" style="max-width:90%; max-height:90%;" src="@Model.Image_Url" />
}