@model CategoryViewModel
@inject VooperContext context
@{
    ViewData["Title"] = "Add Category";
}

<div class="container vw-100">
    <div class="col-12">
        <h4>@ViewData["Title"]</h4>
        @await Html.PartialAsync("_StatusMessage", TempData["StatusMessage"])
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tags"></label>
                        <input asp-for="Tags" class="form-control" />
                        <span asp-validation-for="Tags" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RoleAccess"></label>
                        <input asp-for="RoleAccess" class="form-control" />
                        <span asp-validation-for="RoleAccess" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Parent"></label>
                        <br />
                        <select class="form-control" asp-for="Parent" asp-items="context.GetForumCategoryListForDropdown()"></select>
                    </div>
                    <br />

                    <div class="form-group">
                        <div class="container" style="align-content:flex-start">
                            <div class="d-flex">
                                <div class="flex-column" style="margin-right:5px; margin-left: -15px">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @section Scripts {
            @await Html.PartialAsync("_ValidationScriptsPartial")
        }
    </div>
</div>